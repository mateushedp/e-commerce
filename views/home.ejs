<body>

   <%- include('partials/navigation') %>

   <main>
      <h2>Lista de Produtos</h2>
      
      <% if (prods.length>0) { %>
         <div class="grid">

         <% for(prod of prods) { %>
            <div class="product-card">
               <a href="/details/<%= prod.id %>">
                  <img src="/<%=prod.imageUrl%> " alt="">
               </a>
               <div>
                  <h4><%= prod.title %> </h4>
                  <p>R$ <%= prod.price %></p>

                  
               </div>               
            </div>
         
         <% } %>
      </div>

      <% } %>
      

         

         


   </main>

   <%- include('partials/footer') %>